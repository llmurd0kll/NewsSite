@model IEnumerable<NewsSite.Domain.Entities.News>
@using Microsoft.Extensions.Localization
@using NewsSite.Web
@inject IStringLocalizer<SharedResource> Localizer
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@{
    ViewData["Title"] = Localizer["Home_Title"];
    }

<section>
    <h1>@Localizer["News_Latest"]</h1>

    <div class="home-latest">
        @foreach (var n in Model.Take(3))
            {
            var title = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ru" ? n.TitleRu : n.TitleEn;
            var subtitle = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ru" ? n.SubtitleRu : n.SubtitleEn;

            <div class="card">
                @if (!string.IsNullOrEmpty(n.ImagePath))
                    {
                    <img src="@n.ImagePath" alt="@title" />
                    }
                <h3 class="card-title">@title</h3>
                <p class="card-subtitle">@subtitle</p>
                <small class="published-date">
                    @n.PublishedAt.ToLocalTime().ToString("dd.MM.yyyy", CultureInfo.CurrentUICulture)
                </small>
                <a asp-controller="News" asp-action="Details" asp-route-id="@n.Id" class="btn btn-primary">
                    @Localizer["News_ReadMore"]
                </a>
            </div>
            }
    </div>

    <div class="mt-3 text-center">
        <a asp-controller="News" asp-action="Index" class="btn btn-secondary">
            @Localizer["News_All"]
        </a>
    </div>
</section>
