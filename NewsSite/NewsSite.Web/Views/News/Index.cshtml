@model IEnumerable<NewsSite.Domain.Entities.News>
@using System.Globalization
@{
    ViewData["Title"] = "Новости";
    var culture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    }

<section>
    <div class="news-list-header">
        <h1>@(culture == "ru" ? "Все новости" : "All news")</h1>
    </div>

    <div class="news-list-grid">
        @foreach (var n in Model)
            {
            var title = culture == "ru" ? n.TitleRu : n.TitleEn;
            var subtitle = culture == "ru" ? n.SubtitleRu : n.SubtitleEn;

            <div class="card">
                @if (!string.IsNullOrEmpty(n.ImagePath))
                    {
                    <img src="@n.ImagePath" alt="@title" />
                    }
                <h3 class="card-title">@title</h3>
                <p class="card-subtitle">@subtitle</p>
                <a asp-controller="News" asp-action="Details" asp-route-id="@n.Id" class="btn btn-primary">
                    @(culture == "ru" ? "Читать" : "Read more")
                </a>
            </div>
            }
    </div>

    <div class="mt-3 text-center">
        <button id="loadMore" class="btn btn-primary">
            @(culture == "ru" ? "Загрузить ещё" : "Load more")
        </button>
    </div>
</section>

    @section Scripts {
    <script>
        let page = 1;
        const btn = document.getElementById("load-more");
        const container = document.getElementById("news-container");

        btn.addEventListener("click", () => {
            page++;
            fetch(`/News/List?page=${page}`)
                .then(r => r.text())
                .then(html => {
                    if (html.trim() === "") {
                        btn.style.display = "none";
                    } else {
                        container.insertAdjacentHTML("beforeend", html);
                    }
                });
        });
    </script>
    }
