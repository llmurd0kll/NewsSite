@model IEnumerable<NewsSite.Domain.Entities.News>
@using System.Globalization
@{
    ViewData["Title"] = "Новости";
    var total = (int)ViewBag.TotalCount;
    var pageSize = (int)ViewBag.PageSize;
    var culture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    }

<section>
    <div class="news-list-header">
        <h1>@(culture == "ru" ? "Все новости" : "All news")</h1>
    </div>

    <div id="newsContainer" class="news-list-grid">
        @foreach (var n in Model)
            {
            var title = culture == "ru" ? n.TitleRu : n.TitleEn;
            var subtitle = culture == "ru" ? n.SubtitleRu : n.SubtitleEn;

            <div class="card">
                @if (!string.IsNullOrEmpty(n.ImagePath))
                    {
                    <img src="@n.ImagePath" alt="@title" />
                    }
                <h3 class="card-title">@title</h3>
                <p class="card-subtitle">@subtitle</p>
                <a asp-controller="News" asp-action="Details" asp-route-id="@n.Id" class="btn btn-primary">
                    @(culture == "ru" ? "Читать" : "Read more")
                </a>
            </div>
            }
    </div>

    @if (total > pageSize)
        {
        <div class="mt-3 text-center">
            <button id="loadMore" class="btn btn-primary">
                @(culture == "ru" ? "Загрузить ещё" : "Load more")
            </button>
        </div>
        }
</section>

    @section Scripts {
    <script>
        let skip = @pageSize;
        const total = @total;
        const pageSize = @pageSize;

        document.getElementById("loadMore")?.addEventListener("click", async function () {
            const response = await fetch(`/News/List?skip=${skip}&take=${pageSize}`);
            const html = await response.text();
            document.getElementById("newsContainer").insertAdjacentHTML("beforeend", html);

            skip += pageSize;
            if (skip >= total) {
                this.style.display = "none";
            }
        });
    </script>
    }
