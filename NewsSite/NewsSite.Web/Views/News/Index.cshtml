@model IEnumerable<NewsSite.Domain.Entities.News>
@using Microsoft.Extensions.Localization
@using NewsSite.Web
@inject IStringLocalizer<SharedResource> Localizer
@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@{
    ViewData["Title"] = Localizer["News_Title"];
    var total = (int)ViewBag.TotalCount;
    var pageSize = (int)ViewBag.PageSize;
    }

<section>
    <div class="news-list-header">
        <h1>@Localizer["News_All"]</h1>
    </div>

    <div id="newsContainer" class="news-list-grid">
        @foreach (var n in Model)
            {
            var title = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ru" ? n.TitleRu : n.TitleEn;
            var subtitle = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "ru" ? n.SubtitleRu : n.SubtitleEn;

            <div class="card">
                @if (!string.IsNullOrEmpty(n.ImagePath))
                    {
                    <img src="@n.ImagePath" alt="@title" />
                    }
                <h3 class="card-title">@title</h3>
                <p class="card-subtitle">@subtitle</p>
                <small class="published-date">
                    @n.PublishedAt.ToLocalTime().ToString("dd.MM.yyyy", CultureInfo.CurrentUICulture)
                </small>
                <a asp-controller="News" asp-action="Details" asp-route-id="@n.Id" class="btn btn-primary">
                    @Localizer["News_ReadMore"]
                </a>
            </div>
            }
    </div>

    @if (total > pageSize)
        {
        <div class="mt-3 text-center">
            <button id="loadMore" class="btn btn-primary">
                @Localizer["News_LoadMore"]
            </button>
        </div>
        }
</section>
