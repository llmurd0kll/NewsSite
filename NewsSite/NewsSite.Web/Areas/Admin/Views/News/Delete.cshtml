@model NewsSite.Domain.Entities.News

@{
    ViewData["Title"] = "Удаление новости";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

<h1>Удаление новости</h1>

<h3>Вы уверены, что хотите удалить эту новость?</h3>

<div>
    <h4>@Model.TitleRu / @Model.TitleEn</h4>
    <p>@Model.PublishedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</p>
</div>

<form asp-area="Admin" asp-controller="News" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-area="Admin" asp-controller="News" asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
