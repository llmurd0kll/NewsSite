@using Microsoft.AspNetCore.Mvc.Localization
@model NewsSite.Domain.Entities.News
@using Microsoft.Extensions.Localization
@using NewsSite.Web
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Admin_DeleteNews"];
    }

<h1>@Localizer["Admin_DeleteNews"]</h1>

<h3>@Localizer["Admin_ConfirmDelete"]</h3>

<div class="card mb-3">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
        <img src="@Model.ImagePath" alt="@Model.TitleRu" style="max-height:150px;" />
        }
    <h4 class="card-title">@Model.TitleRu / @Model.TitleEn</h4>
    <p class="card-subtitle">
        @Model.PublishedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
    </p>
    <p>@(Model.IsPublished? Localizer["Field_IsPublished"] : Localizer["News_NotPublished"])</p>
</div>

<form asp-area="Admin" asp-controller="News" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">@Localizer["Admin_Delete"]</button>
    <a asp-area="Admin" asp-controller="News" asp-action="Index" class="btn btn-secondary">
        @Localizer["Admin_Cancel"]
    </a>
</form>
