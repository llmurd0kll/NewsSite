@model NewsSite.Domain.Entities.News

@{
    ViewData["Title"] = "Редактирование новости";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

<h1>Редактирование новости</h1>

<form asp-area="Admin" asp-controller="News" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="TitleRu"></label>
        <input asp-for="TitleRu" class="form-control" />
        <span asp-validation-for="TitleRu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubtitleRu"></label>
        <input asp-for="SubtitleRu" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TextRu"></label>
        <textarea asp-for="TextRu" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="TitleEn"></label>
        <input asp-for="TitleEn" class="form-control" />
        <span asp-validation-for="TitleEn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SubtitleEn"></label>
        <input asp-for="SubtitleEn" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="TextEn"></label>
        <textarea asp-for="TextEn" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="ImagePath"></label>
        <input asp-for="ImagePath" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PublishedAt"></label>
        <input asp-for="PublishedAt" type="datetime-local" class="form-control" />
    </div>

    <div class="form-check">
        <input asp-for="IsPublished" class="form-check-input" />
        <label asp-for="IsPublished" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-area="Admin" asp-controller="News" asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
