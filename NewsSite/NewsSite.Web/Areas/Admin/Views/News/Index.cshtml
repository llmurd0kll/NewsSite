@model IEnumerable<NewsSite.Domain.Entities.News>
@{
    ViewData["Title"] = "Список новостей (админка)";
    }

<h1>Новости (админка)</h1>

<p>
    <a asp-area="Admin" asp-controller="News" asp-action="Create" class="btn btn-success">Создать новость</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Заголовок (RU)</th>
            <th>Заголовок (EN)</th>
            <th>Дата публикации</th>
            <th>Опубликовано</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var n in Model)
            {
            <tr>
                <td>@n.Id</td>
                <td>@n.TitleRu</td>
                <td>@n.TitleEn</td>
                <td>@n.PublishedAt.ToLocalTime().ToString("dd.MM.yyyy")</td>
                <td>@(n.IsPublished ? "Да" : "Нет")</td>
                <td>
                    <a asp-area="Admin" asp-controller="News" asp-action="Edit" asp-route-id="@n.Id" class="btn btn-warning">Редактировать</a>
                    <a asp-area="Admin" asp-controller="News" asp-action="Delete" asp-route-id="@n.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
            }
    </tbody>
</table>
